{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "es2021"],
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src/",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
